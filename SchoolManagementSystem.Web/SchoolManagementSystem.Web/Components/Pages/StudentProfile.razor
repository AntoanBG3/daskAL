@page "/my-profile"
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using SchoolManagementSystem.Web.DTOs
@using SchoolManagementSystem.Web.Models
@using SchoolManagementSystem.Web.Services
@using SchoolManagementSystem.Web.Client.Components
@inject AuthenticationStateProvider AuthStateProvider
@inject StudentService StudentService
@inject IScheduleService ScheduleService
@attribute [Authorize(Roles = "Student")]

<PageTitle>My Profile</PageTitle>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>My Profile</h3>
        </div>
        <div class="card-body">
            @if (CurrentStudent == null)
            {
                 @if (IsLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Profile not found. Please contact an administrator to link your account.
                    </div>
                }
            }
            else
            {
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        <div class="display-1 text-secondary">
                            <i class="bi bi-person-bounding-box"></i>
                        </div>
                        <h4 class="mt-2">@CurrentStudent.FirstName @CurrentStudent.LastName</h4>
                        <span class="badge bg-success">Student</span>
                    </div>
                    <div class="col-md-8">
                        <h5 class="border-bottom pb-2 mb-3">Details</h5>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">User ID:</div>
                            <div class="col-sm-8 text-muted">@CurrentStudent.UserId</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Student ID:</div>
                            <div class="col-sm-8">@CurrentStudent.Id</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Class:</div>
                            <div class="col-sm-8">
                                @(CurrentStudent.SchoolClass?.Name ?? "Unassigned")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Date of Birth:</div>
                            <div class="col-sm-8">@CurrentStudent.DateOfBirth.ToShortDateString()</div>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <h5 class="border-bottom pb-2 mb-3">Weekly Schedule</h5>
                    @if (MySchedule.Any())
                    {
                        <TimetableGrid Schedule="@MySchedule" />
                    }
                    else
                    {
                         <div class="alert alert-info">No schedule available.</div>
                    }
                </div>
            }
        </div>
    </div>
</div>

@code {
    private Student? CurrentStudent;
    private bool IsLoading = true;
    private List<ScheduleEntryDTO> MySchedule = new();

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                CurrentStudent = await StudentService.GetStudentByUserIdAsync(userId);

                if (CurrentStudent?.SchoolClassId != null)
                {
                    // Note: We need to map Entities to DTOs here because ScheduleService returns Entities (as per previous step),
                    // BUT ScheduleService INTERFACE says it returns ScheduleEntries.
                    // However, I introduced DTOs in the Client project.
                    // Wait, the StudentProfile is in the SERVER project (Components/Pages/StudentProfile.razor is SSR or Server interactive).
                    // The ScheduleService is the Server implementation.
                    // So I can get Entities from ScheduleService, but TimetableGrid expects DTOs.
                    // I need to map them.

                    var entries = await ScheduleService.GetScheduleForClassAsync(CurrentStudent.SchoolClassId.Value);
                    MySchedule = entries.Select(ToDTO).ToList();
                }
            }
        }
        IsLoading = false;
    }

    private static ScheduleEntryDTO ToDTO(ScheduleEntry entry)
    {
        return new ScheduleEntryDTO
        {
            Id = entry.Id,
            SchoolClassId = entry.SchoolClassId,
            ClassName = entry.ClassSubject?.SchoolClass?.Name ?? "Unknown Class",
            SubjectId = entry.SubjectId,
            SubjectName = entry.ClassSubject?.Subject?.Name ?? "Unknown Subject",
            TeacherId = entry.ClassSubject?.Subject?.TeacherId,
            TeacherName = entry.ClassSubject?.Subject?.Teacher != null
                ? $"{entry.ClassSubject.Subject.Teacher.FirstName} {entry.ClassSubject.Subject.Teacher.LastName}"
                : "No Teacher",
            DayOfWeek = entry.DayOfWeek,
            StartTime = entry.StartTime,
            EndTime = entry.EndTime,
            RoomNumber = entry.RoomNumber
        };
    }
}
