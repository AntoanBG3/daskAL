@page "/my-profile"
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using SchoolManagementSystem.Web.Models
@using SchoolManagementSystem.Web.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject StudentService StudentService
@attribute [Authorize(Roles = "Student")]

<PageTitle>My Profile</PageTitle>

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-person-circle me-2"></i>My Profile</h3>
        </div>
        <div class="card-body">
            @if (CurrentStudent == null)
            {
                 @if (IsLoading)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        Profile not found. Please contact an administrator to link your account.
                    </div>
                }
            }
            else
            {
                <div class="row">
                    <div class="col-md-4 text-center mb-3">
                        <div class="display-1 text-secondary">
                            <i class="bi bi-person-bounding-box"></i>
                        </div>
                        <h4 class="mt-2">@CurrentStudent.FirstName @CurrentStudent.LastName</h4>
                        <span class="badge bg-success">Student</span>
                    </div>
                    <div class="col-md-8">
                        <h5 class="border-bottom pb-2 mb-3">Details</h5>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">User ID:</div>
                            <div class="col-sm-8 text-muted">@CurrentStudent.UserId</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Student ID:</div>
                            <div class="col-sm-8">@CurrentStudent.Id</div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Class:</div>
                            <div class="col-sm-8">
                                @(CurrentStudent.SchoolClass?.Name ?? "Unassigned")
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-4 fw-bold">Date of Birth:</div>
                            <div class="col-sm-8">@CurrentStudent.DateOfBirth.ToShortDateString()</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private Student? CurrentStudent;
    private bool IsLoading = true;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            var userId = user.FindFirst(ClaimTypes.NameIdentifier)?.Value;
            if (!string.IsNullOrEmpty(userId))
            {
                CurrentStudent = await StudentService.GetStudentByUserIdAsync(userId);
            }
        }
        IsLoading = false;
    }
}
