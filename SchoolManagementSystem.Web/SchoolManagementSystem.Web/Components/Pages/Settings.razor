@page "/settings"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using SchoolManagementSystem.Web.Services
@using SchoolManagementSystem.Web.Models.Auth
@using System.Security.Claims
@attribute [Authorize]
@inject IJSRuntime JSRuntime
@inject IAuthService AuthService
@inject UserManager<User> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider

<PageTitle>Settings - daskAL</PageTitle>

<div class="row">
    <div class="col-lg-8 mx-auto">
        <div class="d-flex align-items-center mb-4">
            <h1 class="h3 mb-0 me-3">Settings</h1>
        </div>

        <!-- Profile Picture Section -->
        <div class="card shadow-sm border-0 mb-4">
             <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 fw-bold"><i class="bi bi-person-circle me-2"></i> Profile Picture</h5>
            </div>
            <div class="card-body">
                @if (ShowUploadSuccess)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                         Profile picture uploaded and sent for approval.
                         <button type="button" class="btn-close" @onclick="() => ShowUploadSuccess = false"></button>
                    </div>
                }
                 @if (ShowUploadError)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                         @UploadErrorMessage
                         <button type="button" class="btn-close" @onclick="() => ShowUploadError = false"></button>
                    </div>
                }

                <div class="d-flex align-items-center mb-3">
                     <div class="me-4">
                         @if (!string.IsNullOrEmpty(CurrentPictureBase64))
                        {
                            <img src="@CurrentPictureBase64" class="rounded-circle shadow-sm" style="width: 100px; height: 100px; object-fit: cover;" alt="Profile Picture" />
                        }
                        else
                        {
                             <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center text-white shadow-sm" style="width: 100px; height: 100px;">
                                <i class="bi bi-person display-4"></i>
                            </div>
                        }
                     </div>
                     <div>
                         <p class="mb-2 fw-semibold">Change your profile picture</p>
                         <InputFile OnChange="@LoadFiles" class="form-control" accept=".jpg,.jpeg,.png" />
                         <div class="form-text text-muted">Max size: 2MB. Formats: JPG, PNG.</div>
                         @if (IsPendingApproval)
                         {
                             <div class="text-warning small mt-1"><i class="bi bi-clock"></i> You have a picture waiting for approval.</div>
                         }
                     </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-header bg-white py-3">
                <h5 class="card-title mb-0 fw-bold"><i class="bi bi-palette me-2"></i> Appearance</h5>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <label class="form-label fw-semibold mb-3">Sidebar Theme</label>
                    @if (currentTheme == null)
                    {
                         <div class="d-flex justify-content-center py-4">
                             <div class="spinner-border text-primary spinner-border-sm" role="status">
                                 <span class="visually-hidden">Loading...</span>
                             </div>
                         </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center">
                            <div class="form-check form-switch custom-switch">
                                <input class="form-check-input" type="checkbox" role="switch" id="darkModeSwitch"
                                       checked="@(currentTheme == "dark")"
                                       @onchange="ToggleTheme">
                                <label class="form-check-label ms-2" for="darkModeSwitch">
                                    @(currentTheme == "dark" ? "Dark Mode Enabled" : "Dark Mode Disabled")
                                </label>
                            </div>
                        </div>
                        <div class="mt-3 text-muted small">
                            <i class="bi bi-info-circle me-1"></i> Switch between Light and Dark sidebar themes.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .custom-switch .form-check-input {
        width: 3em;
        height: 1.5em;
        cursor: pointer;
    }
    .custom-switch .form-check-label {
        font-weight: 500;
        cursor: pointer;
        padding-top: 2px;
    }
</style>

@code {
    private string? currentTheme;
    private string? CurrentPictureBase64;
    private bool IsPendingApproval;
    private bool ShowUploadSuccess;
    private bool ShowUploadError;
    private string UploadErrorMessage = "";
    private User? CurrentUser;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            CurrentUser = await UserManager.GetUserAsync(user);
            if (CurrentUser != null)
            {
                if (CurrentUser.ProfilePicture != null)
                {
                    var mime = CurrentUser.ProfilePictureContentType ?? "image/jpeg";
                    CurrentPictureBase64 = $"data:{mime};base64,{Convert.ToBase64String(CurrentUser.ProfilePicture)}";
                }

                IsPendingApproval = CurrentUser.PendingProfilePicture != null;
            }
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try 
            {
                currentTheme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "sidebarTheme");
                if (string.IsNullOrEmpty(currentTheme) || currentTheme == "default")
                {
                    // Fallback to light if empty or using old default
                    currentTheme = "light";
                }
                StateHasChanged();
            }
            catch
            {
                currentTheme = "light";
                StateHasChanged();
            }
        }
    }

    private async Task ToggleTheme(ChangeEventArgs e)
    {
        bool isDark = (bool)(e.Value ?? false);
        string newTheme = isDark ? "dark" : "light";
        await SetTheme(newTheme);
    }

    private async Task SetTheme(string theme)
    {
        currentTheme = theme;
        await JSRuntime.InvokeVoidAsync("setTheme", theme);
    }

    private async Task LoadFiles(InputFileChangeEventArgs e)
    {
        ShowUploadSuccess = false;
        ShowUploadError = false;

        try
        {
            var file = e.File;
            if (file != null)
            {
                if (file.Size > 2 * 1024 * 1024)
                {
                    UploadErrorMessage = "File size exceeds 2MB limit.";
                    ShowUploadError = true;
                    return;
                }

                using var stream = file.OpenReadStream(2 * 1024 * 1024);
                using var memoryStream = new MemoryStream();
                await stream.CopyToAsync(memoryStream);
                var bytes = memoryStream.ToArray();

                if (CurrentUser != null)
                {
                    var (success, message) = await AuthService.UploadProfilePictureAsync(CurrentUser.Id, bytes, file.ContentType);
                    if (success)
                    {
                        ShowUploadSuccess = true;
                        IsPendingApproval = true;
                    }
                    else
                    {
                        UploadErrorMessage = message;
                        ShowUploadError = true;
                    }
                }
            }
        }
        catch (Exception ex)
        {
            UploadErrorMessage = "An error occurred while uploading: " + ex.Message;
            ShowUploadError = true;
        }
    }
}
