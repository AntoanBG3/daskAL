@page "/grades"
@inject SchoolManagementSystem.Web.Services.GradeService GradeService
@inject SchoolManagementSystem.Web.Services.StudentService StudentService
@inject SchoolManagementSystem.Web.Services.SubjectService SubjectService
@inject NavigationManager Navigation
@using SchoolManagementSystem.Web.Models.ViewModels
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Teacher,Admin")]

<PageTitle>Grades</PageTitle>

<h1>Student Grades</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <label class="form-label">Select Student:</label>
        <select class="form-select" @onchange="LoadStudentData">
            <option value="">-- Select Student --</option>
            @if (students != null)
            {
                foreach (var s in students)
                {
                    <option value="@s.Id">@s.FirstName @s.LastName (@s.Class)</option>
                }
            }
        </select>
    </div>
</div>

@if (selectedStudent != null)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Grades for @selectedStudent.FirstName @selectedStudent.LastName</h4>
        </div>
        <div class="card-body">
            @if (studentGrades != null && studentGrades.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var grade in studentGrades)
                            {
                                <tr>
                                    <td>@grade.SubjectName</td>
                                    <td>@grade.Value</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted">No grades recorded yet.</p>
            }

            <hr />
            <EditForm Model="@newGrade" OnValidSubmit="HandleAddGrade" FormName="AddGradeForm">
                <DataAnnotationsValidator />
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Subject</label>
                        <InputSelect class="form-select" @bind-Value="newGrade.SubjectId">
                            <option value="">-- Select Subject --</option>
                            @if(availableSubjects != null)
                            {
                                foreach(var sub in availableSubjects)
                                {
                                    <option value="@sub.Id">@sub.Name (@sub.TeacherName)</option>
                                }
                            }
                        </InputSelect>
                        <ValidationMessage For="@(() => newGrade.SubjectId)" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Grade (2-6)</label>
                        <InputNumber class="form-control" @bind-Value="newGrade.Value" min="2" max="6" />
                        <ValidationMessage For="@(() => newGrade.Value)" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    private List<StudentViewModel>? students;
    private StudentViewModel? selectedStudent;
    private List<GradeViewModel>? studentGrades;
    private List<SubjectViewModel>? availableSubjects;
    
    [SupplyParameterFromForm]
    private GradeViewModel newGrade { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        students = await StudentService.GetAllStudentsAsync();
    }

    private async Task LoadStudentData(ChangeEventArgs e)
    {
        if (int.TryParse(e.Value?.ToString(), out int studentId))
        {
            selectedStudent = await StudentService.GetStudentByIdAsync(studentId);
            if(selectedStudent != null)
            {
               // Fetch Grades
               studentGrades = await GradeService.GetGradesForStudentAsync(studentId);

               // Fetch Available Subjects for this student's class
               availableSubjects = await SubjectService.GetAvailableSubjectsForStudentAsync(studentId);
               
               newGrade = new GradeViewModel { StudentId = studentId, Value = 6 }; 
            }
        }
        else
        {
            selectedStudent = null;
            availableSubjects = null;
            studentGrades = null;
        }
    }

    private async Task HandleAddGrade()
    {
        if (selectedStudent != null && newGrade.SubjectId.HasValue)
        {
            newGrade.StudentId = selectedStudent.Id;
            await GradeService.AddGradeAsync(newGrade);
            
            // Refresh
            studentGrades = await GradeService.GetGradesForStudentAsync(selectedStudent.Id);
            
            newGrade = new GradeViewModel { StudentId = selectedStudent.Id, Value = 6 };
        }
    }
}
