@page "/login"
@using SchoolManagementSystem.Web.DTOs
@using SchoolManagementSystem.Web.Services
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Authorization
@inject IAuthService AuthService
@inject ILogger<Login> Logger
@inject NavigationManager NavigationManager
@attribute [AllowAnonymous]

<PageTitle>Login - daskAL</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="text-center mb-4">
                <i class="bi bi-mortarboard-fill text-primary" style="font-size: 3rem;"></i>
                <h2 class="mt-2 fw-bold">Welcome to daskAL</h2>
                <p class="text-muted">Sign in to continue</p>
            </div>
            <div class="card shadow border-0">
                <div class="card-body p-4">
                    <EditForm Model="@TargetModel" OnValidSubmit="HandleLogin" FormName="loginForm">
                        <AntiforgeryToken />
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        @if (!string.IsNullOrEmpty(ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-circle me-1"></i> @ErrorMessage
                            </div>
                        }

                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">Email address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <InputText id="email" class="form-control" @bind-Value="TargetModel.Email" placeholder="you@example.com" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <InputText type="password" id="password" class="form-control" @bind-Value="TargetModel.Password" placeholder="••••••••" />
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <InputCheckbox id="rememberMe" class="form-check-input" @bind-Value="TargetModel.RememberMe" />
                            <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@IsLoading">
                                @if (IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                                    <span> Signing in...</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-box-arrow-in-right me-1"></i> Sign In</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
            <div class="text-center mt-3">
                <p class="text-muted">Don't have an account? <a href="/register" class="text-decoration-none fw-semibold">Register here</a></p>
            </div>
        </div>
    </div>
</div>

@code {
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    [SupplyParameterFromForm]
    private LoginRequest TargetModel { get; set; } = new();
    
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }
    
    private string? ErrorMessage { get; set; }
    private bool IsLoading { get; set; } = false;

    private async Task HandleLogin()
    {
        IsLoading = true;
        ErrorMessage = null;
        try
        {
            var (success, message) = await AuthService.LoginAsync(TargetModel);
            if (success)
            {
                var redirectUrl = string.IsNullOrEmpty(ReturnUrl) ? "/" : Uri.UnescapeDataString(ReturnUrl);
                HttpContext?.Response.Redirect(redirectUrl);
            }
            else
            {
                ErrorMessage = message;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Login failed");
            ErrorMessage = "An unexpected error occurred.";
        }
        finally
        {
            IsLoading = false;
        }
    }
}
