@page "/students"
@attribute [Authorize(Roles = "Admin,Teacher")]
@inject SchoolManagementSystem.Web.Services.StudentService StudentService
@inject IJSRuntime JSRuntime
@using SchoolManagementSystem.Web.Models.ViewModels

<PageTitle>Students</PageTitle>

<h1>Students</h1>

<p>List of all registered students.</p>

<div class="mb-3">
    <a href="students/add" class="btn btn-primary">Add New Student</a>
</div>

@if (students == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Class</th>
                    <th>Date of Birth</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in students)
                {
                    <tr>
                        <td>@student.Id</td>
                        <td>@student.FirstName @student.LastName</td>
                        <td>@(student.Class ?? "Unassigned")</td>
                        <td>@student.DateOfBirth.ToShortDateString()</td>
                        <td>
                            <a href="/students/edit/@student.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteStudent(student.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<StudentViewModel>? students;

    protected override async Task OnInitializedAsync()
    {
        await LoadStudents();
    }

    private async Task LoadStudents()
    {
        students = await StudentService.GetAllStudentsAsync();
    }

    private async Task DeleteStudent(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this student?"))
        {
            await StudentService.DeleteStudentAsync(id);
            await LoadStudents();
        }
    }
}
