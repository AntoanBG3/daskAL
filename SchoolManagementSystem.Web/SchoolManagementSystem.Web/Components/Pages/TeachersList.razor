@page "/teachers-list"
@using Microsoft.AspNetCore.Authorization
@using SchoolManagementSystem.Web.Models.ViewModels
@using SchoolManagementSystem.Web.Services
@inject SchoolService SchoolService
@attribute [Authorize(Roles = "Student")]

<PageTitle>Teachers</PageTitle>

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-person-badge me-2"></i>Our Teachers</h2>

    @if (Teachers == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (Teachers.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var teacher in Teachers)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 hover-shadow">
                        <div class="card-body text-center">
                            <div class="mb-3">
                                <div class="avatar-circle mx-auto bg-light text-primary fw-bold display-6 d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; border-radius: 50%;">
                                    @teacher.FirstName.FirstOrDefault()@teacher.LastName.FirstOrDefault()
                                </div>
                            </div>
                            <h5 class="card-title text-dark">@teacher.FirstName @teacher.LastName</h5>
                            <p class="card-text text-muted small">
                                @if (teacher.TeachingSubjects.Any())
                                {
                                    <i class="bi bi-book me-1"></i> @string.Join(", ", teacher.TeachingSubjects)
                                }
                                else
                                {
                                    <span class="fst-italic">No subjects assigned</span>
                                }
                            </p>
                        </div>
                        <div class="card-footer bg-transparent border-top-0 pb-3">
                            <a href="messages?composeTo=@teacher.Id" class="btn btn-outline-primary btn-sm w-100 disabled-link-placeholder" title="Messaging WIP">
                                <i class="bi bi-envelope me-1"></i> Send Message
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i> No teachers found.
        </div>
    }
</div>

@code {
    private List<TeacherViewModel>? Teachers;

    protected override async Task OnInitializedAsync()
    {
        Teachers = await SchoolService.GetAllTeachersAsync();
    }
}
