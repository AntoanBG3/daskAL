@page "/teachers"
@attribute [Authorize(Roles = "Admin")]
@inject SchoolManagementSystem.Web.Services.TeacherService TeacherService
@inject IJSRuntime JSRuntime
@using SchoolManagementSystem.Web.Models.ViewModels

<PageTitle>Teachers</PageTitle>

<h1>Teachers</h1>

<p>List of teachers and their assigned subjects.</p>

<div class="mb-3">
    <a href="teachers/add" class="btn btn-primary">Add New Teacher</a>
</div>

@if (teachers == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Subjects</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in teachers)
                {
                    <tr>
                        <td>@teacher.Id</td>
                        <td>@teacher.FullName</td>
                        <td>
                            @if (teacher.TeachingSubjects.Any())
                            {
                                <span class="badge bg-info text-dark me-1">@string.Join("</span><span class='badge bg-info text-dark me-1'>", teacher.TeachingSubjects)</span>
                            }
                            else
                            {
                                <span class="text-muted small">No subjects assigned</span>
                            }
                        </td>
                        <td>
                            <a href="/teachers/edit/@teacher.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteTeacher(teacher.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<TeacherViewModel>? teachers;

    protected override async Task OnInitializedAsync()
    {
        await LoadTeachers();
    }

    private async Task LoadTeachers()
    {
        teachers = await TeacherService.GetAllTeachersAsync();
    }

    private async Task DeleteTeacher(int id)
    {
         if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this teacher?"))
        {
            await TeacherService.DeleteTeacherAsync(id);
            await LoadTeachers();
        }
    }
}
