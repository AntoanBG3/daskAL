@page "/subjects"
@attribute [Authorize(Roles = "Admin,Teacher")]
@inject SchoolManagementSystem.Web.Services.SubjectService SubjectService
@inject IJSRuntime JSRuntime
@using SchoolManagementSystem.Web.Models.ViewModels

<PageTitle>Subjects</PageTitle>

<h1>Subjects</h1>

<p>List of available subjects.</p>

<div class="mb-3">
    <a href="subjects/add" class="btn btn-primary">Add New Subject</a>
</div>

@if (subjects == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Teacher</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subject in subjects)
                {
                    <tr>
                        <td>@subject.Id</td>
                        <td>@subject.Name</td>
                        <td>@subject.Description</td>
                        <td>@subject.TeacherName</td>
                        <td>
                            <a href="/subjects/edit/@subject.Id" class="btn btn-sm btn-primary me-2">Edit / Assign</a>
                            <button class="btn btn-sm btn-danger" @onclick="() => DeleteSubject(subject.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private List<SubjectViewModel>? subjects;

    protected override async Task OnInitializedAsync()
    {
        await LoadSubjects();
    }

    private async Task LoadSubjects()
    {
        subjects = await SubjectService.GetAllSubjectsAsync();
    }
    
    private async Task DeleteSubject(int id)
    {
         if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this subject?"))
        {
            await SubjectService.DeleteSubjectAsync(id);
            await LoadSubjects();
        }
    }
}
