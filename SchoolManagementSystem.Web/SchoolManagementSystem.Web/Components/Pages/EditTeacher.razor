@page "/teachers/edit/{Id:int}"
@inject SchoolManagementSystem.Web.Services.TeacherService TeacherService
@inject NavigationManager NavigationManager
@using SchoolManagementSystem.Web.Models.ViewModels

<h3>Edit Teacher</h3>

@if (teacher == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="@teacher" OnValidSubmit="HandleValidSubmit" FormName="EditTeacherForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <InputText id="firstName" class="form-control" @bind-Value="teacher.FirstName" />
        </div>

        <div class="mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <InputText id="lastName" class="form-control" @bind-Value="teacher.LastName" />
        </div>

        <hr />
        <h5>Login Credentials</h5>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <InputText id="email" class="form-control" @bind-Value="teacher.Email" />
            <ValidationMessage For="@(() => teacher.Email)" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password (Optional)</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="teacher.Password" placeholder="Leave blank to keep current password" />
            <div class="form-text">If you enter a value here, the user's password will be reset to this value.</div>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/teachers" class="btn btn-secondary">Cancel</a>
    </EditForm>
}

@code {
    [Parameter]
    public int Id { get; set; }

    [SupplyParameterFromForm]
    private TeacherViewModel? teacher { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (teacher == null)
        {
            teacher = await TeacherService.GetTeacherByIdAsync(Id);
        }
    }

    private async Task HandleValidSubmit()
    {
        if (teacher != null)
        {
            await TeacherService.UpdateTeacherAsync(teacher);
            NavigationManager.NavigateTo("/teachers");
        }
    }
}
